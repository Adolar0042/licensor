{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "range": {
      "type": "array",
      "items": [
        {
          "type": "integer",
          "minimum": 0,
          "description": "Start position (inclusive)"
        },
        {
          "type": "integer",
          "minimum": 1,
          "description": "End position (exclusive)"
        }
      ],
      "minItems": 2,
      "maxItems": 2,
      "uniqueItems": true
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "description": "License descriptor",
    "properties": {
      "id": {
        "type": "string",
        "description": "SPDX ID of the license"
      },
      "replace": {
        "type": "object",
        "description": "Keywords that need to be replaced in the license",
        "properties": {
          "year": {
            "type": "string",
            "description": "Copyright year"
          },
          "name": {
            "type": "string",
            "description": "Copyright holder"
          }
        }
      },
      "copyright": {
        "$ref": "#/definitions/range",
        "description": "Interval to remove when skipping the copyright notice in the license"
      },
      "optional": {
        "type": "array",
        "description": "Intervals to remove when skipping the optional contents of the license",
        "items": {
          "$ref": "#/definitions/range",
          "description": "Optional interval"
        },
        "uniqueItems": true
      }
    },
    "required": [
      "id"
    ]
  },
  "uniqueItems": true
}
