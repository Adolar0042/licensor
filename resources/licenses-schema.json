{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "SPDX ID for the license"
      },
      "replace": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string",
            "description": "Copyright year"
          },
          "name": {
            "type": "string",
            "description": "Copyright holder"
          }
        },
        "description": "Keywords that need to be replaced in the license"
      },
      "copyright": {
        "type": "array",
        "items": {
          "type": "integer"
        },
        "description": "Lines to remove when skipping the copyright notice in the license"
      }
    },
    "description": "License descriptor",
    "required": [
      "id"
    ]
  }
}
